<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capriquota.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blood2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/blood2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.controls.SettingsActivity"/>
        <activity android:name=".views.controls.AppointmentList" />
        <activity android:name=".views.controls.NewAppointment" />
        <activity
            android:name=".views.dashboard.Dashboard"
            android:screenOrientation="fullSensor" />
        <activity android:name=".views.splash.Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

        </activity>
        <activity
            android:name=".views.login.LoginActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".views.register.RegistrationActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>